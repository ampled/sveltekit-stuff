{
	"name": "@eirikk/sveltekit-stuff",
	"description": "An assortment of Sveltekit / tailwind utility and helpers",
	"repository": {
		"type": "git",
		"url": "https://github.com/ampled/sveltekit-stuff.git"
	},
	"license": "MIT",
	"private": false,
	"version": "0.0.10",
	"homepage": "https://sveltekit-stuff-chi.vercel.app",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"publishpackage": "npm publish --access public"
	},
	"exports": {
		".": {
			"default": "./src/lib/index.ts"
		}
	},
	"files": [
		"dist",
		"./src/lib",
		"./dist/**/*.svelte",
		"./dist/**/*.js",
		"./dist/**/*.d.ts",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": ">=1.5.0",
		"svelte": ">=3.54.0"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.24.1",
		"@sveltejs/package": "2.2.2",
		"@skeletonlabs/skeleton": "^1.5.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@types/lodash-es": "^4.17.7",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"@sveltejs/vite-plugin-svelte": "~2.4.5",
		"highlight.js": "^11.8.0",
		"highlightjs-svelte": "^1.0.6",
		"lodash-es": "^4.17.21",
		"postcss": "^8.4.23",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"svelte": "^4.2.0",
		"svelte-check": "^3.4.3",
		"svelte-highlight": "^7.2.1",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"vitest": "^0.25.3"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"clsx": "^2.0.0",
		"esm-env": "^1.0.0",
		"tailwind-merge": "^1.14.0"
	}
}
